--User API
--used to manage users and passwords
 
local actualUser = "LoginManager"

isLogged = false
 
function getActualUser()
    return actualUser
end
 
function setActualUser(user)
    actualUser = user
end
 
function add(user)
    if fs.exists("etc/usrlist/"..user) or (user=="root") then
        print("This username is already taken.")
    else
        local f = fs.open("etc/usrlist/"..user,"w")
        f.close()
   
        f = fs.open("etc/usrdata/usernumber", "r")
        userNumber = tonumber(f.readLine()) + 1
        f.close()
 
        fs.delete("etc/usrdata/usernumber")
        f = fs.open("etc/usrdata/usernumber", "w")
        f.write(tostring(userNumber))
        f.close()
 
        f = fs.open("etc/usrdata/userlist", "a")
        f.writeLine(tostring(user))
        f.close()
        fs.makeDir("home/"..user)
    end
end
 
function passwd(user,passwd1)
    local done = false
    local file = nil
	if passwd1==nil then
		if (user=="root") or (fs.exists("etc/usrlist/"..user)) then
 
			while not done do
				write("Enter the new password for "..user..":")
				passwd1 = read("#")
				write("Type the password again:")
				passwd2 = read("#")

				if passwd1~= passwd2 then
					print("The passwords don't match.")
				end
				if (passwd1==passwd2) and (passwd1=="") or (passwd2=="") then
					text.err("Invalid password")
					if term.isColor() then
						term.setTextColor(colors.blue)
					end
				end
				if (passwd1==passwd2) and (passwd1~="") and (passwd2~="") then
					if fs.exists("etc/usrlist/"..user) then
						fs.delete("etc/usrlist/"..user)
					end
					file = fs.open("etc/usrlist/"..user, "w")
					file.write(passwd1)
					file.close()
					done = true
				end
			end
		else
			print("The user do not exists")
		end
	else
		if fs.exists("etc/usrlist/"..user) then
			fs.delete("etc/usrlist/"..user)
		end
		file = fs.open("etc/usrlist/"..user, "w")
		file.write(passwd1)
		file.close()
	end
end
