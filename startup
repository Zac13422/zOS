os.pullEvent = os.pullEventRaw

fs.delete("/tmp/*")
os.loadAPI("lib/user")
os.loadAPI("lib/text")
os.loadAPI("lib/api")
api.loadAll()
shell.setPath("/bin:/usr/bin:/bin/ccUnchanged")

if term.isColor() then
	shell.setPath(shell.path()..":/bin/ccUnchanged/advanced")
end

if pocket then
	shell.setPath(shell.path()..":/bin/ccUnchanged/pocket")
end

if commands then
	shell.setPath(shell.path()..":/bin/ccUnchanged/command")
end
if http then
	shell.setPath(shell.path()..":/bin/ccUnchanged/http")
end

shell.clearAlias("cp")
shell.clearAlias("dir")
shell.clearAlias("mv")
shell.clearAlias("rm")
shell.clearAlias("sh")

os.loadAPI("/bin/zsh")
shell.run("/boot/login")
shell.run("/bin/zsh")
